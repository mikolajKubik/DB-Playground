<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="2.0">

<!-- Define persistence unit -->
  <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">
    <description>description</description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>

<!--    <class></class>-->
    <!--wybieranie klas a to wyzej pozwala to skippowac exclude-unlisted-classes -->

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost/NBD_Car_Rent" /> <!-- DB Name -->
      <property name="jakarta.persistence.jdbc.user" value="user" /> <!-- DB User -->
      <property name="jakarta.persistence.jdbc.password" value="strong-password" /> <!-- DB Password -->

      <!-- Dla bazy danych obsługującej poziom READ_COMMITTED -->
      <property name="jakarta.persistence.jdbc.isolation" value="2"/>
      <!-- Alternatywna opcja zależna od bazy danych -->
      <property name="hibernate.connection.isolation" value="2"/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> <!-- DB Dialect -->
      <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- create / create-drop / update -->

      <property name="hibernate.hikari.minimumIdle" value="5" /> <!-- Minimum number of idle connections in the pool -->
      <property name="hibernate.hikari.maximumPoolSize" value="20" /> <!-- Maximum number of connections in the pool -->
      <property name="hibernate.hikari.idleTimeout" value="300000" /> <!-- Idle connection timeout in milliseconds -->
      <property name="hibernate.hikari.connectionTimeout" value="30000" /> <!-- Connection timeout in milliseconds -->
      <property name="hibernate.hikari.maxLifetime" value="1800000" /> <!-- Maximum lifetime of a connection in milliseconds -->

      <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
      <property name="hibernate.format_sql" value="true" />  <!-- Show SQL formatted -->
      <property name="hibernate.highlight_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>